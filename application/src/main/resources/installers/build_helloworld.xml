<project name="Hello_World_Installer" default="default" basedir=".">
    <import file="nbproject/build-impl.xml"/>

    <property file="build.properties"/>

    <!-- CUSTOM -->
    <target name="-post-init">
        <!-- CUSTOM install the lying test class to fool the installer -->
        <!-- XXX  need to copy these from the resource directory -->
        <property name="lying.testjdk.destination" value="nbi_all/ext/infra/build/engine/build/ext/engine/build/classes/org/netbeans/installer/utils/applications/TestJDK.class"/>
        <property name="lying.testjdk.confirm.destination" value="nbi_all/ext/infra/build/engine/build/ext/engine/build/classes/org/netbeans/installer/utils/applications/COPIED_TESTJDK"/>

        <!-- these are copied to installerbuild by template.xml -->
        <property name="lying.testjdk.class" value="${basedir}/../../../../../../../../TestJDK.class"/>
        <property name="lying.testjdk.confirm" value="${basedir}/COPIED_TESTJDK"/>
        <property name="jre.exe" value="${basedir}/jre.exe"/>
        <!-- end CUSTOM properties -->
        <echo message="HIMOM copying ${lying.testjdk.class} to ${lying.testjdk.destination}" />
        <copy file="${lying.testjdk.class}" tofile="${lying.testjdk.destination}" overwrite="true" force="true" />
        <copy file="${lying.testjdk.confirm}" tofile="${lying.testjdk.confirm.destination}" overwrite="true" force="true" />
        <!-- end CUSTOM -->
    </target>
    <!-- END CUSTOM -->


    <target name="-post-compile" depends="-unjar-core-engine,create-jar-contents-list"/>
    <target name="-unjar-core-engine">
        <!-- Add the contents of the core engine to the engine we're building -->
        <unjar
            src="${reference.NBI_Engine.jar}"
            dest="${build.classes.dir}"
            overwrite="false"/>
    </target>

    <target name="create-jar-contents-list">
        <pathconvert property="build.classes.dir.normalized" dirsep="/">
            <path location="${build.classes.dir}"/>
        </pathconvert>
        <pathconvert pathsep="${line.separator}" property="engine.files" dirsep="/">
            <fileset dir="${build.classes.dir}" includes="${jar.contents.includes}"/>
            <mapper>
                <chainedmapper>
                    <globmapper handledirsep="true" from="${build.classes.dir.normalized}/*" to="*"/>
                </chainedmapper>
            </mapper>
        </pathconvert>
        <echo file="${build.classes.dir}/${jar.contents.list}">${engine.files}</echo>
    </target>

    <target name="-post-jar">
        <delete dir="${dist.dir}/lib"/>
    </target>
</project>
